{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/"],
  "compilerOptions": {
    "outDir": "dist/",
    "lib": ["esnext"],

    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "inlineSources": true,
    "sourceMap": true,

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  }
}

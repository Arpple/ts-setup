{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/",
        "src/**/*.test.ts"
    ],
    "compilerOptions": {
        "outDir": "dist/",
        "lib": [
            "esnext"
        ],

        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true
    }
}
{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/",
        "src/**/*.test.ts"
    ],
    "compilerOptions": {
        "outDir": "dist/",
        "lib": [
            "esnext"
        ],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true
    }
}
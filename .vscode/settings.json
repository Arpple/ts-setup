{
    "mocha.files.glob": "src/**/*.test.ts",
    "mocha.sideBarOptions": {
        "autoUpdateTime": 99999,
    },
    "mocha.requires": [
        "ts-node/register"
    ],
    "fileswitcher.mappings": [
        {
            "from": "src/(.+)\\.(.+)",
            "to": "src/:1.test.:2"
        },
        {
            "from": "src/(.+)\\.test\\.(.+)",
            "to": "src/:1.:2"
        },
    ],
    "createTests.template.default": [
        "import { assert } from \"chai\"",
        "import * as sinon from \"sinon\"",
        "",
        "describe(\"\", () => {",
        "",
        "})"
    ],
    "tslint.autoFixOnSave": true
}
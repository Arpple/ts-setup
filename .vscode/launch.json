{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current File",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Test",
      "program": "${workspaceFolder}/node_modules/.bin/ava",
      "args": [
        "${file}",
        "--serial"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
